<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.walla.tipbreeze.PercentActivity">

    <RadioGroup
        android:id="@+id/rg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <RadioButton
            android:id="@+id/rb1"
            android:layout_marginTop="50dp"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/rb2"
            android:layout_below="@id/rb1"
            android:layout_marginTop="85dp"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/rb3"
            android:layout_below="@id/rb2"
            android:layout_marginTop="50dp"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/rb4"
            android:layout_below="@+id/rb3"
            android:layout_marginTop="50dp"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/rb5"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/rb4"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RadioGroup>


    <!-- radio button one-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your own"
        android:layout_centerHorizontal="true"/>


    <EditText
        android:id="@+id/selectedPercent1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_marginTop="15dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_toEndOf="@id/selectedPercent1"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:text="%"/>

    <SeekBar
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/selectedPercent1"
        android:id="@+id/seekBar1"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/startPercent1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_below="@+id/seekBar1"
        android:layout_marginStart="55dp"
        android:text=""/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="%"
        android:layout_marginTop="20dp"
        android:layout_below="@id/seekBar1"
        android:layout_toEndOf="@+id/startPercent1"/>

    <EditText
        android:id="@+id/endPercent1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_below="@+id/seekBar1"
        android:layout_toStartOf="@+id/endPercentSign1"
        android:text=""/>

    <TextView
        android:id="@+id/endPercentSign1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="%"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/seekBar1"/>



    <View
        android:layout_width="match_parent"
        android:layout_below="@id/seekBar1"
        android:layout_marginTop="50dp"
        android:background="#b0b0b0"
        android:layout_height="1dp" />

    <!-- radio button two-->

    <TextView
        android:id="@+id/selectedPercent2"
        android:layout_below="@id/selectedPercent1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:text="15%"
        android:textColor="@color/colorPrimaryDark"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"/>

    <SeekBar
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/selectedPercent2"
        android:id="@+id/seekBar2"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/startPercent2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekBar2"
        android:layout_marginStart="55dp"
        android:text="15%"/>

    <TextView
        android:id="@+id/endPercent2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekBar2"
        android:layout_alignParentEnd="true"
        android:text="20%"/>


    <!-- radio button three-->

    <TextView
        android:id="@+id/selectedPercent3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekBar2"
        android:layout_marginTop="35dp"
        android:text="18%"
        android:textColor="@color/colorPrimaryDark"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"/>

    <SeekBar
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:progress="30"
        android:layout_below="@id/selectedPercent3"
        android:id="@+id/seekBar3"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/startPercent3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekBar3"
        android:layout_marginStart="60dp"
        android:text="15%"/>

    <TextView
        android:id="@+id/endPercent3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekBar3"
        android:layout_alignParentEnd="true"
        android:text="25%"/>

    <!-- radio button four-->

    <TextView
        android:id="@+id/selectedPercent4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/selectedPercent3"
        android:layout_marginTop="55dp"
        android:text="20%"
        android:textColor="@color/colorPrimaryDark"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"/>

    <SeekBar
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:progress="50"
        android:layout_below="@id/selectedPercent4"
        android:id="@+id/seekBar4"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/startPercent4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekBar4"
        android:layout_marginStart="55dp"
        android:text="10%"/>

    <TextView
        android:id="@+id/endPercent4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekBar4"
        android:layout_alignParentEnd="true"
        android:text="30%"/>

    <!-- radio button five-->

    <TextView
        android:id="@+id/selectedPercent5"
        android:layout_below="@id/selectedPercent4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:text="20%"
        android:textColor="@color/colorPrimaryDark"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"/>

    <SeekBar
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:progress="50"
        android:layout_below="@id/selectedPercent5"
        android:id="@+id/seekBar5"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/startPercent5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekBar5"
        android:layout_marginStart="55dp"
        android:text="15%"/>

    <TextView
        android:id="@+id/endPercent5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekBar5"
        android:layout_alignParentEnd="true"
        android:text="25%"/>


</RelativeLayout>
